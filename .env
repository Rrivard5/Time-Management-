# StudyFlow Configuration
# IMPORTANT: Fill in your actual values below

# Email Configuration (REQUIRED for notifications to work)
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-to-something-random

# Database Configuration
DATABASE_URL=sqlite:///studyflow.db

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Optional Features
ENABLE_AI_FEATURES=false

# Security Settings
SESSION_TIMEOUT=3600
